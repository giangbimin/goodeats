  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1 col-md-12">
        <div id="gmap"></div>
      </div>
    </div>
  </div>
<script src="http://maps.google.com/maps/api/js?sensor=false&amp;key=AIzaSyAJrcIiDkd5I-2HJw29r5ZshLlITss1O0E"></script>
<%= javascript_include_tag 'gmap3.min', "data-turbolinks-track" => true  %>
<script>
  $('#gmap').gmap3({
    center: [10.8022914, 106.7372934],
    zoom: 16,
    styles: gmapStyles, // gmapStyles are declared in script.js
    draggable: false,
    scrollwheel: false
  }).on({
    click: function (map, event) {
      map.setOptions({
        scrollwheel: true,
        draggable: true
      });
    },
    mouseout: function (map, event) {
      map.setOptions({
        scrollwheel: false,
        draggable: false
      });
    }
  }).marker([{
    position: [10.8022914, 106.7372934]
  }]);

  </script>