<% foods.each do |food| %>
    <%= link_to menu_display_path(id: food.id), remote: true, class: 'menu-box' do %>
      <div class="row clearfix margin-b-20">
      <div class="thumb">
          <img src="<%= food.image_url %>" width="70" class="img-fluid" alt="">
      </div>
      <div class="menu-content">
        <h4><%= food.name %> | price: <%= food.price %></h4>
        <span class="glyphicon glyphicon-eye-open"></span> <%= food.views_count %> | <span class="glyphicon glyphicon-comment"></span> <%= food.ratings.count %> | <span><%= food.section %> | <%= food.cuisine %></span>
        <%= food.price %>
        <p><%= food.description.truncate(58) %> ...</p>
      </div>
  </div>
    <% end %>
  <hr> 
<% end %> 
